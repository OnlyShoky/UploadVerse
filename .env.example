# ============================================
# VIDEO PUBLISHER CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# SESSION/DATA DIRECTORIES
# ============================================
# All platform sessions and tokens stored here (gitignored)
SESSIONS_DIR=data/sessions
VIDEOS_DIR=data/videos
COOKIES_DIR=data/sessions

# ============================================
# YOUTUBE CONFIGURATION (RECOMMENDED TO START)
# ============================================
# Step 1: Get client_secrets.json from Google Cloud Console
# Step 2: Place it in project root as client_secrets.json
# Step 3: Run authentication (token will be created automatically)

YOUTUBE_CLIENT_SECRETS_FILE=client_secrets.json
YOUTUBE_TOKEN_FILE=data/sessions/youtube_token.pickle

# Optional: Override defaults
# YOUTUBE_DEFAULT_PRIVACY=private
# YOUTUBE_DEFAULT_CATEGORY=22

# ============================================
# TIKTOK CONFIGURATION (OPTIONAL - RISKY)
# ============================================
# WARNING: Web automation violates TikTok TOS
# Use test/burner account only!

TIKTOK_USERNAME=
TIKTOK_PASSWORD=
TIKTOK_COOKIES_FILE=data/sessions/tiktok_session.pkl
TIKTOK_HEADLESS=false

# ============================================
# INSTAGRAM CONFIGURATION (OPTIONAL - VERY RISKY)
# ============================================
# WARNING: Instagram aggressively bans automation
# Use test account only! Expect account bans.

INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
INSTAGRAM_COOKIES_FILE=data/sessions/instagram_session.pkl
INSTAGRAM_HEADLESS=false

# ============================================
# SAFETY SETTINGS (IMPORTANT!)
# ============================================
# Start with these enabled for safety!

# Test mode - simulates operations without real uploads
TEST_MODE=false

# Dry run - shows what would happen without executing
DRY_RUN=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# UPLOAD DEFAULTS
# ============================================
# YouTube privacy: private, unlisted, public
DEFAULT_PRIVACY=private

# YouTube category ID (22 = People & Blogs)
DEFAULT_CATEGORY_ID=22

# ============================================
# RATE LIMITING (SAFETY)
# ============================================
# Maximum uploads per hour per platform
MAX_UPLOADS_PER_HOUR=5

# Retry attempts on failure
RETRY_ATTEMPTS=3

# ============================================
# ADVANCED SETTINGS
# ============================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=500

# Supported video formats (comma-separated)
ALLOWED_EXTENSIONS=mp4,mov,avi,mkv,webm

# Browser automation timeout (seconds)
BROWSER_TIMEOUT=30
